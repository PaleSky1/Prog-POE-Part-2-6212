<!DOCTYPE html>
<style>
    .custom-nav-item {
        margin: 0 15px;
        list-style: none;
    }

    .custom-nav-link {
        color: white;
        text-decoration: none;
        padding: 10px 15px;
        border-radius: 5px;
        transition: border-bottom 0.3s ease;
        position: relative;
    }

        .custom-nav-link::after {
            content: '';
            display: block;
            width: 0;
            height: 2px;
            background: white;
            transition: width 0.3s ease;
            position: absolute;
            left: 50%;
            bottom: -5px;
            transform: translateX(-50%);
        }

        .custom-nav-link:hover::after {
            width: 100%;
        }

</style>

<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Prog_POE</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Prog_POE.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm">
            <div class="container-fluid">
                <div class="col-1">
                    <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Dashboard">
                        <img src="/Images/E.png" alt="EduClaim logo" style="height: 50px;"> duClaim
                    </a>
                </div>
                <div class="col-10">
                    <div class="navbar-collapse collapse justify-content-center">
                        <ul class="navbar-nav">
                            <li class="custom-nav-item">
                                <a class="custom-nav-link text-white" asp-area="" asp-controller="Home" asp-action="Dashboard">Dashboard</a>
                            </li>
                            <li class="custom-nav-item">
                                <a class="custom-nav-link text-white" asp-area="" asp-controller="Home" asp-action="SubmitClaims">Submit Claim</a>
                            </li>
                            <li class="custom-nav-item">
                                <a class="custom-nav-link text-white" asp-area="" asp-controller="Claims" asp-action="AllClaims">My Claims</a>
                            </li>
                            <li class="custom-nav-item">
                                <a class="custom-nav-link text-white" asp-area="" asp-controller="Home" asp-action="Notifications">Notifications</a>
                            </li>
                        </ul>
                    </div>
                </div>

                        <div class="col-1 text-end">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <div class="col-1 text-end">
                                    @if (Context.Session.GetString("Username") != null)
                                    {
                                        <div class="d-flex align-items-center">
                                            <img src="/Images/user.png" alt="Profile" style="height: 40px; border-radius: 50%; margin-right: 10px;" />
                                            <span class="text-white me-2">@Context.Session.GetString("Username")</span>
                                            <form asp-action="Logout" asp-controller="Login" method="post" style="display:inline;">
                                                <button type="submit" class="btn btn-link text-white">Logout</button>
                                            </form>
                                        </div>
                                    }
                                    else
                                    {
                                        <a class="btn btn-link text-white" asp-area="" asp-controller="Login" asp-action="Index">Login</a>
                                    }
                                </div>
                            }
                            else
                            {
                                <a class="btn btn-link text-white" asp-area="" asp-controller="Login" asp-action="Index">Login</a>
                            }
                        </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Prog_POE - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
