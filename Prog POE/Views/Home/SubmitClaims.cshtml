@model Prog_POE.Models.ClaimEntity
@{
    ViewData["Title"] = "Submit Claims";
}

<style>
    .container {
        margin-top: 30px;
    }

    .submit-card {
        background-color: rgba(255, 255, 255, 0.2);
        border-radius: 15px;
        padding: 20px;
        color: #fff;
        text-align: center;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        margin-bottom: 20px;
        cursor: pointer;
        transition: transform 0.2s ease;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

        .submit-card.active {
            transform: scale(1.05);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.5);
            border: 2px solid rgba(255, 255, 255, 0.5);
        }

        .submit-card img {
            width: 100%;
            max-height: 200px;
            object-fit: cover;
            transition: opacity 0.3s ease;
            border-radius: 10px;
            display: block;
            margin: 0 auto;
        }
        .submit-card h3, .submit-card p {
            color: #fff;
        }

    .file-list-container {
        max-height: 100px;
        overflow-y: auto;
        border: 1px solid rgba(255, 255, 255, 0.3);
        padding: 10px;
        border-radius: 10px;
        margin-top: 10px;
        background-color: rgba(255, 255, 255, 0.1);
    }

        .file-list-container ul {
            list-style-type: none;
            padding-left: 0;
            color: #fff;
        }

            .file-list-container ul li {
                display: flex;
                justify-content: space-between;
                margin-bottom: 5px;
            }

                .file-list-container ul li button {
                    background-color: transparent;
                    border: none;
                    color: #fff;
                    cursor: pointer;
                }

                    .file-list-container ul li button:hover {
                        color: red;
                    }

    .file-input-container {
        display: flex;
        justify-content: flex-start;
        align-items: center;
        gap: 10px;
        margin-top: 10px;
    }

    input[type="file"]::file-selector-button {
        background-color: #007bff;
        color: white;
        padding: 5px 10px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

    input[type="file"] {
        color: transparent;
    }

    .submit-card .file-input-container {
        width: 100%;
    }

    .row.equal-height .col-md-4, .col-md-3 {
        display: flex;
        align-items: stretch;
    }

    .submit-card {
        flex: 1;
    }

    .submit-button {
        background-color: #007bff;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        margin-top: 20px;
        transition: background-color 0.2s ease;
        text-align: center;
    }

        .submit-button:hover {
            background-color: #0056b3;
        }
</style>

<div class="container">
    <main role="main" class="pb-3">
        <h1 class="text-white text-center">Submit a New Claim</h1>

        <form asp-action="SubmitClaim" method="post" enctype="multipart/form-data">
            <div class="row equal-height justify-content-center">
                <div class="col-md-6">
                    <div class="submit-card">
                        <h3>Lecture Info</h3>
                        <p><strong>Lecture Name:</strong> <input asp-for="LectureName" class="form-control" /></p>
                        <p><strong>Lecture ID:</strong> <input asp-for="LectureID" class="form-control" /></p>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="submit-card">
                        <h3>Work Details</h3>
                        <input asp-for="HoursWorked" class="form-control" placeholder="Hours Worked" required />
                        <br />
                        <input asp-for="HourlyRate" class="form-control" placeholder="Hourly Rate" required />
                        <br />
                        <textarea asp-for="AdditionalNotes" class="form-control" rows="3" placeholder="Additional Notes"></textarea>
                    </div>
                </div>
            </div>

            <div class="row equal-height justify-content-center">
                <div class="col-md-6">
                    <div class="submit-card">
                        <h3>Claim Info</h3>
                        <textarea asp-for="ClaimDescription" class="form-control" rows="3" placeholder="Describe the claim"></textarea>
                    </div>
                </div>
            </div>

            <div class="text-center">
                <button type="submit" class="submit-button">Submit Claim</button>
            </div>
        </form>
    </main>
</div>


<script>
    let uploadedFiles = [];

    function handleFileUpload(input) {
        const fileList = document.getElementById('file-list');
        for (let i = 0; i < input.files.length; i++) {
            uploadedFiles.push(input.files[i]);
        }
        updateFileListDisplay();
    }

    function updateFileListDisplay() {
        const fileList = document.getElementById('file-list');
        fileList.innerHTML = '';
        uploadedFiles.forEach((file, index) => {
            const li = document.createElement('li');
            li.innerHTML = `${file.name} <button onclick="removeFile(${index})">Remove</button>`;
            fileList.appendChild(li);
        });
    }

    function removeFile(index) {
        uploadedFiles.splice(index, 1);
        updateFileListDisplay();
    }

    function toggleCard(card) {
        const cards = document.querySelectorAll('.submit-card');
        cards.forEach(c => c.classList.remove('active'));
        card.classList.add('active');
    }

    function validateHours() {
        const hoursInput = document.getElementById('hours-worked');
        if (hoursInput.value < 0) {
            hoursInput.value = 0;
        }
    }
    function submitForm() {
        const form = document.getElementById('submit-claim-form');
        const formData = new FormData(form);

        const files = document.getElementById('files').files;
        for (let i = 0; i < files.length; i++) {
            formData.append('files', files[i]);
        }

        fetch('/Claims/SubmitClaim', {
            method: 'POST',
            body: formData
        })
            .then(response => response.json())
            .then(data => {
                window.location.href = '/Claims/Success';
            })
            .catch(error => {
                console.error('Error submitting form:', error);
            });
    }

</script>
